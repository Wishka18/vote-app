{% extends 'base.html.twig' %}

{% block title %}Détails du Membre{% endblock %}

{% block content %}
    <div class="crud-prefix-container">
        <h1 class="crud-prefix-title">Détails du Membre</h1>
        <table class="crud-prefix-table">
            <tbody>
                <tr>
                    <th>Id</th>
                    <td>{{ member.id }}</td>
                </tr>
                <tr>
                    <th>Nom</th>
                    <td>{{ member.name }}</td>
                </tr>
                <tr>
                    <th>Email</th>
                    <td>{{ member.email }}</td>
                </tr>
                <tr>
                    <th>Cotisations Payées</th>
                    <td>{{ member.duesPaid ? 'Oui' : 'Non' }}</td>
                </tr>
                <tr>
                    <th>Code de Vote</th>
                    <td>{{ member.votingCode }}</td>
                </tr>
                
            </tbody>
        </table>
        <div class="crud-prefix-btn-group">
            <a href="{{ path('app_member_index') }}" class="crud-prefix-btn crud-prefix-btn-view" title="Retour à la liste">
                <i class="fas fa-arrow-left"></i>
            </a>
            <a href="{{ path('app_member_edit', {'id': member.id}) }}" class="crud-prefix-btn crud-prefix-btn-edit" title="Modifier">
                <i class="fas fa-edit"></i>
            </a>
            {{ include('member/_delete_form.html.twig') }}
        </div>
    </div>
{% endblock %}
