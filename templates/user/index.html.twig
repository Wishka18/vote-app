{% extends 'base.html.twig' %}

{% block title %}Gestion des Utilisateurs{% endblock %}

{% block content %}
    <div class="crud-prefix-container">
        <div class="crud-prefix-header">
            <h1 class="crud-prefix-title">Gestion des Utilisateurs</h1>
            <a href="{{ path('app_user_new') }}" class="crud-prefix-add-btn">+ Ajouter un utilisateur</a>
        </div>

        <table class="crud-prefix-table">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Nom d'utilisateur</th>
                    <th>Rôles</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                {% for user in users %}
                    <tr>
                        <td>{{ user.id }}</td>
                        <td>{{ user.username }}</td>
                        <td>{{ user.roles ? user.roles|json_encode : '' }}</td>
                        <td>
                            <div class="crud-prefix-btn-group">
                                <a href="{{ path('app_user_show', {'id': user.id}) }}" class="crud-prefix-btn crud-prefix-btn-view" title="Voir">
                                    <i class="fas fa-eye"></i>
                                </a>
                                <a href="{{ path('app_user_edit', {'id': user.id}) }}" class="crud-prefix-btn crud-prefix-btn-edit" title="Modifier">
                                    <i class="fas fa-edit"></i>
                                </a>
                                <button class="crud-prefix-btn crud-prefix-btn-delete" title="Supprimer" onclick="confirmDelete('{{ path('app_user_delete', {'id': user.id}) }}')">
                                    <i class="fas fa-trash-alt"></i>
                                </button>
                            </div>
                        </td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="4">Aucun enregistrement trouvé</td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}
